@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}


<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Issue Tracker</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTETemplate/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/AdminLTETemplate/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/AdminLTETemplate/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- JQVMap -->
    <link rel="stylesheet" href="~/AdminLTETemplate/plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTETemplate/dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/AdminLTETemplate/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/AdminLTETemplate/plugins/daterangepicker/daterangepicker.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/AdminLTETemplate/plugins/summernote/summernote-bs4.min.css">
</head>
<body class="hold-transition register-page">
<div class="text-center">
    <div class="login-box">
        <div class="login-logo">
            <b>Issue Tracker</b>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Login to Your Account</p>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input-group mb-3">
                        <input id="emailInput" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                        
                        
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                        <div class="input-group">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input id="passwordInput" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                        
                        
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <div class="input-group">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button id="loginButton" type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <!--<p class="mb-1">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>-->

                <p class="mb-0">
                    Don't have an account? 
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                </p>
                <div style="text-align:center; margin-top:30px">
                    <p>Or Login as:</p>
                </div>
                <div style="">
                    
                    <div style="display:block; align-content:center; justify-content:center">
                            <a onclick="fillLoginDetails('demoadmin@gmail.com','Abc&123!')" class="btn btn-danger" style="margin-left:50px; margin-right:50px;">Demo Admin</a>
                            <a onclick="fillLoginDetails('demopm@gmail.com','Abc&123!')" class="btn btn-success" style="margin-left:50px; margin-right:50px; margin-top:10px; margin-bottom:10px;">Demo Project Manager</a>
                            <a onclick="fillLoginDetails('demodev@gmail.com','Abc&123!')" class="btn btn-primary" style="margin-left:50px; margin-right:50px;">Demo Developer</a>
                    </div>
                </div>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
</div>
</body>
<script>
    //fill admin details
    function fillLoginDetails(email, password) {
        document.getElementById("emailInput").value = email;
        document.getElementById("passwordInput").value = password;
        document.getElementById("loginButton").click();
    }
    
</script>
